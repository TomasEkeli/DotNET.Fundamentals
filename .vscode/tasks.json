    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "args": [],
    "tasks": [
        {
            "taskName": "build",
            "args": ["${workspaceRoot}/Source/Mapping", "--no-restore"],
            "isBuildCommand": true,
